@model WebApplicationMVCPractice.Common.LoginDetails

@{
    ViewBag.Title = "CheckTransactionPassword";
}

<body>
    @* Transaction Login Page *@
    <div class="container login-container">
        <div class="row">
            <div class="col-md-6 mx-auto login-form-1">
                <h3 class="font-weight-bold text-themecolor">Transaction Login</h3>
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger font-weight-bold font-16 noListStyle" })
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.TransactionPassword, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.TransactionPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Transaction Password" } })
                        @Html.ValidationMessageFor(model => model.TransactionPassword, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Submit" class="btnSubmit" />
                        </div>
                    </div>
                }
                <div>
                    @Html.ActionLink("Don't want to transfer money?", "Index", "BanksCustomer", null, htmlAttributes: new { @class = "ForgetPwd" })
                </div>
            </div>
        </div>
    </div>
</body>